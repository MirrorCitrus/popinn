<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>

            <!-- 渐变 -->
            <gradient android:endColor="#efbc9e" android:startColor="#ff8c00" android:type="linear" />
            <!-- 描边 -->
            <stroke android:width="2dp" android:color="#98d163" android:dashGap="3dp" android:dashWidth="5dp" />
            <!-- 圆角 -->
            <corners android:radius="2dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#f2b7ca" />

            <stroke android:width="2dp" android:color="#4fcbed" />

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="5dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

</selector>